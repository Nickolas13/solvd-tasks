<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <properties resource="mysql.properties"/>
    <typeAliases>
        <typeAlias alias="Company" type="com.solvd.mvc.tables.Company"/>
        <typeAlias alias="Customer" type="com.solvd.mvc.tables.Customer"/>
        <typeAlias alias="CustomerService" type="com.solvd.mvc.tables.CustomerService"/>
        <typeAlias alias="Employees" type="com.solvd.mvc.tables.Employees"/>
        <typeAlias alias="Factories" type="com.solvd.mvc.tables.Factories"/>
    </typeAliases>


    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${driver}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${username}"/>
                <property name="password" value="${password}"/>
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <mapper resource="mybatis/mappers/Company.xml"/>
        <mapper resource="mybatis/mappers/Factories.xml"/>
        <mapper resource="mybatis/mappers/CustomerService.xml"/>
        <mapper resource="mybatis/mappers/Employee.xml"/>
        <mapper resource="mybatis/mappers/Customer.xml"/>
    </mappers>

</configuration>