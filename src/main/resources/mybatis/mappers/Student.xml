<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.solvd.mybatis.service.interfaces.IStudentService">

    <resultMap id="result" type="Student">
        <result property="id" column="ID"/>
        <result property="name" column="NAME"/>
        <result property="branch" column="BRANCH"/>
        <result property="percentage" column="PERCENTAGE"/>
        <result property="phone" column="PHONE"/>
        <result property="email" column="EMAIL"/>
    </resultMap>

    <!--delete elements by id-->
    <delete id="deleteById" parameterType="int">
        DELETE
        FROM student
        WHERE ID = #{id};
    </delete>

    <!--update elements-->
    <update id="update" parameterType="Student">
        UPDATE student
        SET NAME       = #{name},
            BRANCH     = #{branch},
            PERCENTAGE = #{percentage},
            PHONE      = #{phone},
            EMAIL      = #{email}
        WHERE ID = #{id};
    </update>

    <!--Select all elements mapper-->
    <select id="getAll" resultMap="result">
        SELECT *
        FROM STUDENT;
    </select>

    <!-- Select by id mapper-->
    <select id="getById" parameterType="int" resultMap="result">
        SELECT *
        FROM STUDENT
        WHERE ID = #{id};
    </select>


    <!-- Insert element mapper-->
    <insert id="insert" parameterType="Student" useGeneratedKeys="true">
        INSERT INTO student (NAME, BRANCH, PERCENTAGE, PHONE, EMAIL)
        VALUES (#{name}, #{branch}, #{percentage},
                #{phone}, #{email});
    </insert>
</mapper>

